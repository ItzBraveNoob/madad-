<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height= "match_parent"
    android:layout_width= "match_parent"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/recycler2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.458" />

        <View
            android:id="@+id/view"
            style="@style/Divider"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="160dp"
            android:backgroundTint="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.018"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/verify"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="92dp"
            android:gravity="center_vertical"
            android:text="Verification Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/docsv_profile"
            app:layout_constraintVertical_bias="0.954" />


        <TextView
            android:id="@+id/verify_value"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="605dp"
            android:layout_marginBottom="93dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Not verified"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/verify"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="Organization Status"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/recycler2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.458" />

        <View
            android:id="@+id/view2"
            style="@style/Divider"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="120dp"
            android:backgroundTint="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.043"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/detailverify_p"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="488dp"
            android:gravity="center_vertical"
            android:text="Details Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/det_verify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="488dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Not updated"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/detailverify_p"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="104dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/namep_edit"
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/edit_round"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawablePadding="10dp"
            android:ems="8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/name_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_profile" />

        <EditText
            android:id="@+id/emailp_edit"
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_round"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawablePadding="10dp"
            android:ems="8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/email_profile"
            app:layout_constraintTop_toBottomOf="@+id/namep_edit" />

        <TextView
            android:id="@+id/password_profile"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_profile" />

        <EditText
            android:id="@+id/passwordp_edit"
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_round"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawablePadding="10dp"
            android:ems="8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPassword"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="12345678"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/password_profile"
            app:layout_constraintTop_toBottomOf="@+id/emailp_edit" />

        <Button
            android:id="@+id/change_pass"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginTop="296dp"
            android:background="@drawable/custom_button"
            android:text="Change Password"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/details_profile_btn"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginTop="296dp"
            android:background="@drawable/custom_button"
            android:text="Upload Details"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/change_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/docs_profile_btn"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginTop="296dp"
            android:background="@drawable/custom_button"
            android:text="Upload Documents "
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/change_pass"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/docsv_profile"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Documents Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailverify_p" />

        <TextView
            android:id="@+id/docs_verify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Not Uploaded"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/docsv_profile"
            app:layout_constraintTop_toBottomOf="@+id/det_verify" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>